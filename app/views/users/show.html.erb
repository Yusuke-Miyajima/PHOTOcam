<div class="container">
	<h2><%= "#{@user.name}" %>(@<%= "#{@user.account_id}" %>)</h2>
	<% if @user.id == current_user.id %>
	<%= link_to "ユーザー編集", edit_user_registration_path(@user.id), class:"text-right btn btn-default btn-sm" %>
	<% end %>
	<hr>
	<div class="row">
		<%= notice %>
		<table>
			<tbody>
				<tr>
					<% @photos.each do |photo| %>
					<td style="margin-bottom: 10px;"><%= image_tag photo.image, :width => '30%', :height => 'auto' %><br>
						<%= link_to "#{photo.title}", photo_path(photo.id) %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
