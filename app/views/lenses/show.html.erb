<div class="container">
	<%= notice %>
	<div class="row">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th><%= @lens.name %></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>メーカー</td>
					<td><%= @lens.manufacturer %></td>
				</tr>
				<tr>
					<td>マウント</td>
					<td><%= @lens.mount %></td>
				</tr>
				<tr>
					<td>レンズタイプ</td>
					<td><%= @lens.type %></td>
				</tr>
				<tr>
					<td>フルサイズ対応</td>
					<td><%= @lens.full_frame_support %></td>
				</tr>
				<tr>
					<td>AF,MF,AF/MF</td>
					<td><%= @lens.focus_system %></td>
				</tr>
				<tr>
					<td>F値</td>
					<td>F<%= @lens.minimum_aperture %>~
						F<%= @lens.maximum_aperture %>
					</td>
				</tr>
				<tr>
					<td>焦点距離</td>
					<td><%= @lens.minimum_focal_length %>mm~
						<%= @lens.maximum_focal_length %>mm</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="row">
		<table>
			<tr>
				<% @photos.each do |photo| %>
				<td><%= image_tag photo.image, size:"250x250" %><br>
					<%= link_to "#{photo.title}" ,photo_path(photo.id) %>
					<%= link_to "(@#{photo.user.account_id })", user_path(photo.user.id) %>
				</td>
				<% end %>
			</tr>
		</table>
	</div>
</div>