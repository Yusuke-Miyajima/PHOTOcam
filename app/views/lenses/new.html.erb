<div class="container">
	<h2>レンズ追加</h2>
	<hr>
	<div class="row">
		<table>
			<tbody>
				<%= form_for(@lens, url: '/lenses') do |f| %>
				<tr>
					<td>レンズ名:</td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td>メーカー:</td>
					<td><%= f.text_field :manufacturer %></td>
				</tr>
				<tr>
					<td>マウント:</td>
					<td><%= f.text_field :mount %></td>
				</tr>
				<tr>
					<td>レンズタイプ(単焦点, 魚眼, etc.):</td>
					<td><%= f.text_field :type %></td>
				</tr>
				<tr>
					<td>AF,MF,AF/MF:</td>
					<td><%= f.text_field :focus_system %></td>
				</tr>
				<tr>
					<td>F値:</td>
					<td><%= f.text_field :minimum_aperture %>〜<%= f.text_field :maximum_aperture %></td>
				</tr>
				<tr>
					<td>焦点距離:</td>
					<td><%= f.text_field :minimum_focal_length %>mm〜<%= f.text_field :maximum_focal_length %>mm</td>
				</tr>
				<tr>
					<td><label><%= f.radio_button :full_frame_support, "true" %>フルサイズ対応</label>
						<label><%= f.radio_button :full_frame_support, "false" %>APS-C専用</label></td>
				</tr>
				<tr><td><%= f.submit "レンズ追加" %></td></tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to "戻る", :back %>
	</div>
	<div class="row">
		<table>
			<tbody>
				<tr>
					<% @lenses.each do |lens| %>
					<td class="col-xs-4">
						<%= lens %>
						<%= link_to "編集", edit_lens_path(lens.id) %>
					</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>