<div class="container">
	<h2>ボディ情報編集</h2>
	<hr>
	<div class="row">
		<div class="col-xs-3">
			<%= form_with @body do |f| %><table>
				<tbody>
					<tr><%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "on" %></tr>
					<tr><%= f.text_field :manufacturer, class:"form-control", autocomplete: "on" %></tr>
					<tr><%= f.text_field :sensor_size, class:"form-control", autocomplete: "on" %></tr>
					<tr><%= f.text_field :mount, class:"form-control", autocomplete: "on" %></tr>
					<tr>
						<td><%= "フィルム", %></td>
					</tr>
					<tr>
						<td><%= "ミラーレス機", %></td>
					</tr>
					<tr>
						<td><%= "レンズ交換不可", %></td>
					</tr>
				</tbody>
			</table>
			<%= f.submit "更新" %>
			<%= end %>
			<%= link_to "戻る", :back %>
		</div>
	</div>
</div>
