<div class="container">
	<h2>ボディ追加</h2>
	<hr>
	<div class="row">
		<table>
			<tbody>
				<%= form_for(@body, url: '/bodies') do |f| %>
				<tr>
					<td>ボディ名:</td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td>メーカー:</td>
					<td><%= f.text_field :manufacturer %></td>
				</tr>
				<tr>
					<td>センサーサイズ:</td>
					<td><%= f.text_field :sensor_size %></td>
				</tr>
				<tr>
					<td>マウント:</td>
					<td><%= f.text_field :mount %></td>
				</tr>
				<tr>
					<td><label><%= f.radio_button :film, "true" %>フィルムカメラ</label>
						<label><%= f.radio_button :film, "false" %>デジタルカメラ</label>
					</td>
				</tr>
				<tr>
					<td><label><%= f.radio_button :reflex, "true" %>レフ機</label>
						<label><%= f.radio_button :reflex, "false" %>ミラーレス機</label>
					</td>
				</tr>
				<tr>
					<td><label><%= f.radio_button :interchangeable, "true" %>レンズ交換式カメラ</label>
						<label><%= f.radio_button :interchangeable, "false" %>レンズ交換不可</label>
					</td>
				</tr>
				<tr><td><% f.submit "ボディ追加" %></td></tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to "戻る", :back %>
	</div>
	<div class="row">
		<table>
			<tbody>
				<tr>
					<% @bodies.each do |body| %>
					<td class="col-xs-4">
						<%= body %>
						<%= link_to "編集", edit_body_path(body.id) %>
					</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>