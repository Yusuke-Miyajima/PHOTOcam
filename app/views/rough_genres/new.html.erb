<div class="container">
	<h2>ジャンルグループ</h2>
	<hr>
	<div class="row">
		<%= form_for @genre do |f| %>
		<%= f.text_field :genre %>
		<%= f.submit "グループ追加" %>
		<% end %>
		<%= link_to "戻る", :back %>
	</div>
	<div class="row">
		<table>
			<tbody>
				<tr>
					<% @genres.each do |rough_genre| %>
					<td class="col-xs-4">
						<%= rough_genre %>
						<%= link_to "編集", edit_rough_genre_path(rough_genre.id) %>
					</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
